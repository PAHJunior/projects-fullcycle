html
  head
    head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.mb-4= message
      form(action="http://localhost:3000/name" method="POST")
        .mb-3
          label(for="name" class="form-label") Nome:
          input#name.form-control(type="text" name="name" placeholder="Digite seu nome" required)
        button.btn.btn-primary(type="submit") Enviar
      h3.mb-4 Lista de Nomes
      table.table.table-striped
        thead
          tr
            th # Nome
        tbody
          each name in names
            tr
              td= name